.row
  = form_for @publisher do |f|
    - if @publisher.errors.any?
      #error_explanation
        %h2= "#{pluralize(@publisher.errors.count, "error")} prohibited this publisher from being saved:"
        %ul
          - @publisher.errors.full_messages.each do |msg|
            %li= msg
    .span4
      %p Invoice address
      %hr
      .field
        = render 'invoice_address_fields', f: f
    .span4
      %p Forwarding address
      %hr
      .field
        = render 'correspond_address_fields', f: f
      %button{id: 'copy_address'} copy
    .span3
      %p Contact person
      %hr
      .field
        = f.fields_for :contacts do |builder|
          = render 'contact_fields', f: builder
          = link_to_add_fields 'Add', f, :contacts
    %div{style:"clear:both"}
    .actions
      = f.submit 'Save'

