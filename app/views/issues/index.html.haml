%h3
  
  Issues List
  %a{href: url_for(action: 'new'), class:'btn btn-mini btn-success', style: 'margin-left:15px'} Create new


%div{class:'list-table'}
  %table{class:'table table-bordered'}
    %th Title
    %th Publisher
    %th Frequecy
    %th Archive / Actual
    %th Actions
    - @issues.each do |issue|
      %tr
        %td
          = link_to issue.title, issue_path(issue) 
        %td= issue.publisher.name
        %td= issue.issue_frequency.name
        %td= issue_archive? issue
        %td
          = link_to 'Edit', {action: :edit, id: issue}, class: 'btn btn-mini btn-primary'
          = link_to 'Delete', issue, :method => :delete, data: { confirm: "Are you sure?" },class: 'btn btn-mini btn-danger'
