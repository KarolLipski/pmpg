= form_for @sell_point do |f|
  - if @sell_point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sell_point.errors.count, "error")} prohibited this sell_point from being saved:"
      %ul
        - @sell_point.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :chain
    = f.text_field :chain
  .actions
    = f.submit 'Save'
